{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Copilot tracking log",
  "description": "Schema for misc/copilot_tracking.json â€” an array of immutable request log entries",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": true,
    "properties": {
      "request_start_time": { "type": "string", "format": "date-time" },
      "request_end_time": { "type": "string", "format": "date-time" },
      "processing_time_microseconds": { "type": "integer", "minimum": 0 },
      "processing_time_seconds": { "type": "number", "minimum": 0 },
      "tokens_used": { "anyOf": [ { "type": "integer", "minimum": 0 }, { "type": "null" } ] },
      "tokens_used_estimate": { "type": "integer", "minimum": 0 },
      "tool_calls_count": { "type": "integer", "minimum": 0 },
      "files_accessed_count": { "type": "integer", "minimum": 0 },
      "terminal_commands_count": { "type": "integer", "minimum": 0 },
      "note": { "type": "string" }
    },
    "required": ["request_start_time", "request_end_time", "tokens_used_estimate", "note"],
    "oneOf": [
      { "required": ["processing_time_microseconds"] },
      { "required": ["processing_time_seconds"] }
    ]
  }
}
