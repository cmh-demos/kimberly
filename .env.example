# Environment Variables Template for Kimberly
# Copy this to .env and fill in actual values for local development.
# Never commit .env to git.

# LLM and AI Credentials
HUGGINGFACE_TOKEN=your_huggingface_token_here
# For future: OPENAI_API_KEY= (but enforce free-mode)

# Database
DATABASE_URL=sqlite:///kimberly.db
# For remote: postgresql://user:pass@host:port/db

# Telemetry/Monitoring (optional)
PROMETHEUS_URL=http://localhost:9090
GRAFANA_API_KEY=your_grafana_key

# Security
ENCRYPTION_KEY=your_32_char_encryption_key
FREE_MODE=true

# Other
DEBUG=true